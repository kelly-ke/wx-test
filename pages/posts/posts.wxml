<!--logs.wxml-->
<view>
  <swiper vertical='true' indicator-dots='true' autoplay='true' interval='50000' indicator-color='#fff' indicator-active-color='yellow'>
    <swiper-item>
      <image src="/images/swiper/swiper1.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/swiper/swiper2.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/swiper/swiper3.png"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{posts_key}}" wx:for-item="item" wx:for-index="idx">
    <view class='post-container'>
      <view class='post-auth-data'>
        <image class='post-auth' src='{{item.author_img}}'></image>
        <text class='post-data'>{{item.date}} {{idx}}</text>
      </view>
      <text class='post-title'>{{item.title}}</text>
      <image class='post-image' src='{{item.post_img}}'></image>
      <text class='post-content'>{{item.content}}</text>
      <view class='post-like'>
        <image class='post-like-image' src='../../images/icon/chat.png'></image>
        <text class='post-like-font'>{{collect_num}}</text>
        <image class='post-like-image' src='../../images/icon/view.png'></image>
        <text class='post-like-font'>{{post_img}}</text>
      </view>
    </view>
  </block>
</view>